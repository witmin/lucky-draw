#!/usr/bin/env node
var debug = require('debug')('lucky-draw'),
    http = require('http'),
    app = require('../app'),
    io = require('../lib/io');

app.set('port', process.env.PORT || 3000);

var server = http.createServer(app);

io.attach(server);

server.listen(app.get('port'), function() {
    debug('Express server listening on port ' + server.address().port);
});

